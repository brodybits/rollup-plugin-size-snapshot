{
  "name": "@brodybits/rollup-plugin-size-snapshot",
  "version": "0.14.0-dev",
  "main": "dist/index.js",
  "files": [
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "build": "babel src --out-dir dist",
    "lint-check": "prettier --check --end-of-line=auto ./**/*.{js,md}",
    "test-build": "rm -rf temp && mkdir -p temp && cp -r tests temp && babel src --out-dir temp/src && jest temp/tests",
    "test": "jest && yarn lint-check",
    "prepublish": "yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write"
    ]
  },
  "babel": {
    "presets": [
      "@babel/flow",
      [
        "@babel/env",
        {
          "targets": {
            "node": "16"
          }
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "repository": "https://github.com/brodybits/rollup-plugin-size-snapshot",
  "author": "Bogdan Chadkin <trysound@yandex.ru>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-flow": "^7.16.5",
    "husky": "^4.3.8",
    "jest": "^27.4.5",
    "jest-matcher-deep-close-to": "^3.0.2",
    "lint-staged": "^12.1.4",
    "prettier": "~2.5.1",
    "redux": "^4.1.2",
    "rollup": "~2.40.0",
    "rollup-plugin-terser": "^7.0.2",
    "strip-ansi": "^6.0.1"
  },
  "peerDependencies": {
    "rollup": "^2.0.0"
  },
  "dependencies": {
    "@rollup/plugin-replace": "^3.0.1",
    "acorn": "^8.7.0",
    "bytes": "^3.1.1",
    "chalk": "^4.1.2",
    "gzip-size": "^5.1.1",
    "jest-diff": "^26.6.2",
    "memory-fs": "^0.5.0",
    "terser": "^4.8.0",
    "webpack": "^5.65.0"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6",
    "yarn": ">=1"
  }
}
